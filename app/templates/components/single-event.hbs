{{#if isAdd}}
{{#link-to 'library.book' userLibrary.id event.book.id}}
<div class="icon-container">
</div>
<div class="event-body">
  <div class="event-heading">
    <h5>{{truncate eventMessage limit=57}}</h5>
    <time>{{moment-from-now event.updatedAt}}</time>
  </div>
  <div class="event-content">
    <p>{{event.book.title}}</p>
      {{list-tags tags=event.book.tags library=userLibrary}}
  </div>
</div>
{{/link-to}}
{{else}}
<div class="icon-container">
</div>
<div class="event-body">
  <div class="event-heading">
    <h5>{{truncate eventMessage limit=57}}</h5>
    <time>{{moment-from-now event.updatedAt}}</time>
  </div>
  <div class="event-content">
    <p>{{event.book.title}}</p>
    {{#if event.removeReason}}
    {{reason-display reason=event.removeReason}}
    {{/if}}
  </div>
</div>
{{/if}}
