<header id="libraries-header">
  {{#link-to 'user' model.gitUser.login}}
    <h3>{{model.gitUser.login}}</h3>
  {{/link-to}}
  <h2>Library of Devexandria</h2>
  {{#if session.isAuthenticated}}
    <button {{action 'logout'}}>logout</button>
  {{/if}}
</header>
<div class="sub-header">
  <h2>Index of Libraries</h2>
</div>
<main id="libraries-main">
  {{#each model.libraries as |library|}}
    {{#link-to 'library' library.id}}
      {{glance-library library=library}}
    {{/link-to}}
  {{/each}}
</main>
